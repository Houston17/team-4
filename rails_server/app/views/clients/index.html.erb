<% if user_signed_in? %>
  <%= link_to 'Edit', clients_edit_list_path, class: 'btn btn-secondary' %>
<% end %>

<div class="topic main">
   <div class="container">
      <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
         <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-generic" data-slide-to="1" class=""></li>
            <li data-target="#carousel-example-generic" data-slide-to="2" class=""></li>
         </ol>
         <div class="carousel-inner">
            <% @featured_clients.each do |client| %>
              item
            <% end %>
            <div class="item">
               <img src="/img/wardellfeatured.png">
               <div class="carousel-caption">
                  <h3><a href="/clients/1">Wendell</a></h3>
                  <p>After being homeless for 25 years, his Search came to an end.</p>
               </div>
            </div>
            <div class="item">
               <img src="/img/homeless1.jpg">
               <div class="carousel-caption">
                  <h3><a href="/clients/2">Travis</a></h3>
                  <p>Search found a homeless veteran a place to call Home.</p>
                  <p> </p>
               </div>
            </div>
            <div class="item active">
               <img src="/img/homeless5.jpg">
               <div class="carousel-caption">
                  <h3><a href="/clients/3">Martin</a></h3>
                  <p>Search helped find him a job in six months and soon after, an apartment.</p>
                  <p> </p>
               </div>
            </div>
         </div>
         <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
         <span class="glyphicon glyphicon-chevron-left"></span>
         </a>
         <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
         <span class="glyphicon glyphicon-chevron-right"></span>
         </a>
      </div>
   </div>
</div>
</div>
<div class="container main">
   <div class="col-sm-6">
      <div class="panel panel-primary">
         <div class="panel-heading">
            <h3 class="panel-title">Featured Stories</h3>
         </div>
         <div class="panel-body">
            <% i = 0 %>
            <% @featured_clients.each do |client| %>
              <div class="col-sm-3">
                <div class="profileimage" style="margin-left:-20px;margin-top:15px;"><img style="height:200px;" src="<%= client.picture_url %>">
                </div>
              </div>
              <div class="col-sm-8">
                <h3 style="margin-top:10px;"><%= link_to client.name, client_url(client) %></h3>
                <h6 style="line-height:22px;color:#292929;font-size:14px;">
                  <%= truncate(client.bio, length: 300, separator: ' ') %>
                  <%= link_to 'Learn More', client_url(client) %>
                </h6>
              </div>
              <% if i < @featured_clients.count - 1 %>
                <hr />
              <% end %>
              <% i+= 1 %>
            <% end %>
         </div>
      </div>
   </div>
   <div class="col-sm-6">
      <div class="panel panel-primary">
         <div class="panel-heading">
            <h3 class="panel-title">Featured Volunteers</h3>
         </div>
         <div class="panel-body">
            <div class="col-sm-3">
               <div class="profileimage" style="margin-left:-20px;margin-top:15px;"><img style="height:200px; width:120px" src="http://www.bobthebuilder.com/en-gb/Images/btb_where_to_watch_background_Bob_tcm1238-232957.png">
               </div>
            </div>
            <div class="col-sm-8">
